<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Guess that number!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout>
            <Label Text="You win if you guess the number between 1 and 100000!" VerticalOptions="Center" HorizontalOptions="Center" />
            <Entry x:Name="guess" Placeholder="Guess a number!" VerticalOptions="Center" HorizontalOptions="Center" Keyboard="Numeric"/>
            <Button Text="Guess" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Clicked="ButtonClicked" />
        </StackLayout>
    </StackLayout>

</ContentPage>
